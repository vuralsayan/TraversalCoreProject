@using EntityLayer.Concrete
@model List<Features>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            @foreach (var item in Model)
            {
                @if (item.IsBigImage)
                {
                    <div class="col-lg-6">
                        <div class="maghny-gd-1">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius m-0">
                                    <img class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Title</h4>
                                            <p>From @item.Description ₺</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="col-lg-6">
                <div class="row">
                    @foreach (var item in Model.Where(x => !x.IsBigImage))
                    {
                        <div class="col-6 mb-4">
                            <div class="maghny-gd-1">
                                <div class="maghny-grid">
                                    <figure class="effect-lily border-radius">
                                        <img class="img-fluid" src="@item.Image" alt="" />
                                        <figcaption>
                                            <div>
                                                <h4>@item.Title</h4>
                                                <p>From @item.Description ₺</p>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
