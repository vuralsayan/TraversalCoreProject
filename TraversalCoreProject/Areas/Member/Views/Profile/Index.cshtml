@model TraversalCoreProject.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil düzenleme sayfası</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Mail Adresiniz</label>
        <input type="text" class="form-control" asp-for="Mail">
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Şifre Tekrar</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Resim Seçiniz</label> <br />
        <input type="file" asp-for="Image" class="form-control-file" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
</form>

