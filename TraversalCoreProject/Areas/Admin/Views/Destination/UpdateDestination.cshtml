@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rota Güncelleme Sayfası</h1>

<form method="post">
    <input asp-for="DestinationID" type="hidden" />
    <div class="form-group">
        <label asp-for="City">Şehir</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DayNight">Gün Gece</label>
        <input asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image">Ana Görsel</label>
        <input asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity">Kapasite</label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CoverImage">Kapak Görseli</label>
        <input asp-for="CoverImage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image2">Görsel 2</label>
        <input asp-for="Image2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Details1">Detay 1</label>
        <textarea rows="5" asp-for="Details1" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Details2">Detay 2</label>
        <textarea rows="5" asp-for="Details2" class="form-control"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>



